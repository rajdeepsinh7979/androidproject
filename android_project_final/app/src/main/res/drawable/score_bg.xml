<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Semi-transparent glass background -->
    <solid android:color="#66000000"/>

    <!-- Smooth rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Soft glowing border -->
    <stroke
        android:width="2dp"
        android:color="#66FFD54F"/>

    <!-- Inner padding feel -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"/>

</shape>
