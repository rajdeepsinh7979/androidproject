<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameover">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gameoverback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113"
        app:layout_constraintWidth_percent="0.4" />

    <FrameLayout
        android:id="@+id/scoreContainer"
        android:layout_width="370dp"
        android:layout_height="260dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintDimensionRatio="5:2">

        <!-- My Score Image -->

        <ImageView
            android:id="@+id/yourScoreImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/myscore" />

        <TextView
            android:id="@+id/highscore"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_gravity="start|center_vertical"

            android:layout_marginStart="205dp"
            android:layout_marginBottom="23dp"

            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/scoreText"
            android:layout_width="130dp"
            android:layout_height="wrap_content"

            android:layout_gravity="start|center_vertical"

            android:layout_marginStart="205dp"
            android:layout_marginTop="47dp"

            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold" />


    </FrameLayout>
    <!-- Bottom Image Buttons -->

    <ImageButton
        android:id="@+id/homebtn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="@drawable/homebutton"
        android:scaleType="fitCenter"
        android:contentDescription="Retry"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/playagainbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="110dp"/>

    <ImageButton
        android:id="@+id/playagainbtn"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:background="@drawable/playagainbutton"
        android:scaleType="fitCenter"
        android:contentDescription="Exit"

        app:layout_constraintStart_toEndOf="@id/homebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="110dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
