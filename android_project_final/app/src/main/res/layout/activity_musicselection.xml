<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".musicselection">
    <!-- Background Image -->

    <ImageView
        android:id="@+id/musicBackground"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/music_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/music_bestscore"
        android:layout_width="165dp"
        android:layout_height="116dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/music_best_score"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/music_settings"
        android:layout_width="121dp"
        android:layout_height="92dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="4dp"
        android:elevation="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/music_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/musicBackground"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.274"
        app:srcCompat="@drawable/logo3" />

    <ScrollView
        android:id="@+id/songScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="always"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/songGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:padding="16dp"
            android:useDefaultMargins="true"/>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>